<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)

    <script src="https://kit.fontawesome.com/19020ed353.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">JIL CA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (User.IsInRole("Church"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Events", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        @*<li class="nav-item">
                            @Html.ActionLink("Attendance", "Index", "Attendance", new { area = "" }, new { @class = "nav-link" })
                        </li>*@
                        <li class="nav-item">
                            @Html.ActionLink("Users", "Index", "UserAdmin", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Seating Arrangement", "Index", "SeatingArrangement", new { area = "" }, new { @class = "nav-link" })
                        </li>

                    }
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jesus Is Lord Church Canada West</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
